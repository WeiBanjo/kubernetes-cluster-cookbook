# File created by Chef! Any local changes will be overwritten next Chef run!

KUBE_LOGTOSTDERR="--logtostderr=true"
KUBE_LOG_LEVEL="--v=<%= @kubernetes_log_level %>"
KUBE_ALLOW_PRIV="--allow-privileged=<%= @allow_privileged %>"

<% if node['kubernetes_cluster']['secure']['enabled'] -%>
KUBE_OPTIONS="--client-certificate=<%= @etcd_cert_dir %>/client.srv.crt --client-key=<%= @etcd_cert_dir %>/client.srv.key"
KUBE_MASTER="--master=https://<%= @kubernetes_secure_api_host %>:<%= @kubernetes_secure_api_port %>"
<% else -%>
KUBE_MASTER="--master=http://<%= @kubernetes_api_host %>:<%= @kubernetes_api_port %>"
<% end -%>
